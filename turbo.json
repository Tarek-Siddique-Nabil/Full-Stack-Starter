{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**" , "dist/**", "!.turbo/**", "!.cache/**"],
      "outputLogs": "new-only"
    },
    
    "analyze": {
      "dependsOn": ["^analyze"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:generate":{
      "dependsOn": ["^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["packages/db/drizzle/**", "!packages/db/drizzle/.cache/**"]
    },
    "db:migrate": {
      "dependsOn": ["^db:migrate" , "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["packages/db/drizzle/**", "!packages/db/drizzle/.cache/**"]
    },
    "//#format": {},
    "//#lint": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
